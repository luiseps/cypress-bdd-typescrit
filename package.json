{
  "name": "cypress-bdd-typescrit",
  "version": "1.0.0",
  "description": "Cypress-Typescript with BDD",
  "main": "index.js",
  "scripts": {
    "test": "npx cypress run --browser chrome && npm run reporter",
    "debug": "cypress open",
    "report": "npm run reporter",
    "login": "npx cypress run --env tags=\"@login\" && npm run reporter",
    "elements": "npx cypress run --env tags=\"@elements\" && npm run reporter",
    "reporter": "node ./reporters/reporter.js"
  },
  "keywords": [
    "Cypress",
    "Typescript",
    "BDD"
  ],
  "author": "Luis Perez",
  "license": "ISC",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "cypress": "^15.0.0",
    "esbuild": "^0.25.9",
    "prettier": "^2.3.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.0.0",
    "dayjs": "^1.11.17",
    "multiple-cucumber-html-reporter": "^3.9.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/[filepath]/**/*.{js,ts}",
      "cypress/e2e/[filepath].{js,ts}",
      "cypress/**/step_definitions/**/*.{js,ts}"
    ],
    "json": {
      "enabled": true,
      "output": "cypress/reports/json/cucumber-report.json"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/messages/cucumber-messages.ndjson"
    }
  }
}
